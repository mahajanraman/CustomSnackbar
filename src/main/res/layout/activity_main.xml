<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ramvan.com.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/default_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="20dp"
            android:text="Default Snackbar"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/change_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="20dp"
            android:text="Change BackGround Color"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/change_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="20dp"
            android:text="Change Text Color"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/custom_back_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="20dp"
            android:text="Custom backGround And Text Color"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/with_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="20dp"
            android:text="With Action Callback"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/custom_action_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="20dp"
            android:text="Action Callback Color Change"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/show_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="20dp"
            android:text="SnackBar in Fragment"
            android:textColor="#ffffff" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/container_body"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</RelativeLayout>
